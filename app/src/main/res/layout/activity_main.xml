<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/valtvTitulo"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorTitulo"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etTalla"
            android:inputType="number"
            android:maxLength="3"
            android:hint="@string/valetTalla"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPeso"
            android:maxLength="4"
            android:inputType="numberDecimal"
            android:hint="@string/valetPeso"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCalcular"
            android:text="@string/valbtnCalcular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/valtvResultado"
            android:id="@+id/tvResultado"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorResultado"
            />

    </LinearLayout>


</LinearLayout>